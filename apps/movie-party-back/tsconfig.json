{
    "compilerOptions": {
        "target": "ES2020",
        "module": "Node16",
        "moduleResolution": "node16",
        "esModuleInterop": true,
        "outDir": "dist",
        "rootDir": "src",
        "strict": true,
        "skipLibCheck": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "strictFunctionTypes": true,
        "noUnusedLocals": true,
        "noUnusedParameters": false,
        "paths": {
            "*": ["node_modules/*"]
        },
        "baseUrl": "./"
    },
    "include": ["./src/**/*.ts", "./src/**/*.d.ts"],
    "exclude": ["node_modules", "dist"]
}
