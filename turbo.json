{
    "$schema": "https://turborepo.com/schema.json",
    "ui": "tui",
    "tasks": {
        "build": {
            "dependsOn": ["^build"],
            "inputs": ["$TURBO_DEFAULT$", ".env*"],
            "outputs": [".next/**", "!.next/cache/**", "dist/**", "build/**"],
            "env": [
                "PORT",
                "WORKING_ENV",
                "FEATURE_FLAGS",
                "LAYERS_AVAILABLE",
                "PEERJS_PORT",
                "NODE_ENV",
                "PEERJS_BASE_URL"
            ]
        },
        "lint": {
            "dependsOn": ["^lint"],
            "env": [
                "PORT",
                "WORKING_ENV",
                "FEATURE_FLAGS",
                "LAYERS_AVAILABLE",
                "PEERJS_PORT",
                "NODE_ENV",
                "PEERJS_BASE_URL"
            ]
        },
        "check-types": {
            "dependsOn": ["^check-types"],
            "env": [
                "PORT",
                "WORKING_ENV",
                "FEATURE_FLAGS",
                "LAYERS_AVAILABLE",
                "PEERJS_PORT",
                "NODE_ENV",
                "PEERJS_BASE_URL"
            ]
        },
        "dev": {
            "cache": false,
            "persistent": true,
            "env": [
                "PORT",
                "WORKING_ENV",
                "FEATURE_FLAGS",
                "LAYERS_AVAILABLE",
                "PEERJS_PORT",
                "NODE_ENV",
                "PEERJS_BASE_URL"
            ]
        },
        "test": {
            "dependsOn": ["^build"],
            "inputs": ["$TURBO_DEFAULT$", ".env*"],
            "env": [
                "PORT",
                "WORKING_ENV",
                "FEATURE_FLAGS",
                "LAYERS_AVAILABLE",
                "PEERJS_PORT",
                "NODE_ENV",
                "PEERJS_BASE_URL"
            ]
        },
        "test:coverage": {
            "dependsOn": ["^build"],
            "inputs": ["$TURBO_DEFAULT$", ".env*"],
            "env": [
                "PORT",
                "WORKING_ENV",
                "FEATURE_FLAGS",
                "LAYERS_AVAILABLE",
                "PEERJS_PORT",
                "NODE_ENV",
                "PEERJS_BASE_URL"
            ]
        },
        "clean": {
            "cache": false
        }
    }
}
